FROM golang:1.25-alpine AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o server ./cmd/server

FROM alpine:3.20
WORKDIR /app

ENV SERVER_PORT=8080

COPY --from=builder /app/server .
COPY env.example .env.example

EXPOSE 8080

CMD ["./server"]

